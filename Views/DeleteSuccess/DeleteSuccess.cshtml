@{
    ViewData["Title"] = "Exclusão Concluída";
    var RemovedItem = "X"; 
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="alert alert-success position-relative p-4 shadow-lg rounded text-center" style="min-width: 600px; padding-top: 3.5rem;">
        <button class="btn btn-danger btn-sm position-absolute top-0 end-0 m-3" onclick="window.location.href='@Url.Action("Index", "Home")'">
            SAIR
        </button>
        <h4 class="mb-2">Exclusão realizada com sucesso!</h4>
        <p class="mb-0 text-muted" style="font-size: 0.9rem;">O item <strong>@RemovedItem</strong> foi removido do estoque.</p>
    </div>
</div>
